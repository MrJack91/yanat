<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ch.zhaw.moba.yanat.DetailActivity" >


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Messpunkt erstellen"
        android:id="@+id/create_measure_point"
        android:layout_below="@+id/export"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:id="@+id/back"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/ic_arrow_back_white_18dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:id="@+id/export"
        android:layout_alignTop="@+id/back"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_launch_white_18dp" />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/pdf_view"
        android:background="#f47575"
        android:layout_below="@+id/create_measure_point"
        android:layout_alignParentStart="true" />

    <!-- <android.support.v7.widget.AppCompatImageView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/image_view_pin"
         android:src="@drawable/pin"
         android:layout_below="@+id/create_measure_point"
         android:layout_alignParentStart="true"
         android:layout_marginTop="51dp" />-->


</RelativeLayout>
